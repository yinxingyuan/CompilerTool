@using CompilerTool.Web.HtmlExtensions
@using CompilerTool.Web.Models

@model SearchModel
<div class="search-container">
    @using (Html.BeginForm("Search", "OrderItem", FormMethod.Post, new {data_ajax = "true", data_ajax_method = "POST", data_ajax_mode = "replace", data_ajax_update = "#OrderItem_DataList", name = "OrderItem_Search", id = "OrderItem_Search"}))
    {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder ="Name"})
        @Html.HiddenFor(m => m.Pager.PageSize)

        <input class="m_btn" type="submit" value="Search"/>
    }
</div>

